# Runtime application settings
BB_DATABASE_USER=postgres
BB_DATABASE_PASSWORD=postgres
BB_DATABASE_HOST=localhost
BB_DATABASE_PORT=5432
BB_DATABASE_NAME=budgetbuddy
BB_SQLALCHEMY_ECHO=false

# Tests
# Point integration tests at a separate database
TEST_DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/budgetbuddy_test

# If set, integration tests will spin up an ephemeral Postgres via testcontainers
# USE_TESTCONTAINERS=1

# Logging
LOG_LEVEL=DEBUG
LOG_TO_FILE=false
LOG_FILE_PATH=budgetbuddy.log
